{
  "name": "hlsystem-app",
  "private": true,
  "version": "1.0.7",
  "type": "module",
  "description": "Aplikace pro správu pokladny s automatickými aktualizacemi",
  "author": "caliaq",
  "homepage": "https://github.com/caliaq/hlsystem-app",
  "repository": {
    "type": "git",
    "url": "https://github.com/caliaq/hlsystem-app.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:dev": "tsc && vite build && electron-builder --config electron-builder.dev.json5",
    "build:publish": "tsc && vite build && electron-builder --publish=always",
    "build:draft": "tsc && vite build && electron-builder --publish=never",
    "release:major": "npm version major && git push --follow-tags",
    "release:minor": "npm version minor && git push --follow-tags",
    "release:patch": "npm version patch && git push --follow-tags",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "bufferutil": "^4.0.9",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "hls.js": "^1.6.7",
    "jsmpeg": "^1.0.0",
    "node-thermal-printer": "^4.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.6.0",
    "recharts": "^2.15.3",
    "utf-8-validate": "^5.0.10",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.12",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.20",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "vite": "^5.4.19",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "main": "dist-electron/main.js"
}
